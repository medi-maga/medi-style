  - header = 'true'
  - contentSide = 'true'
  - footer_multi = 'true'
  - footer = 'true'
  - appNameTxt = ' logo title'
  -
    appFooter = [
      {   
        'footerText': [
          {
            'text': 'プライバシーポリシー' ,
            'link': '#'
