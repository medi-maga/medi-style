// -------------------
// media query for tablet device
// only for common.css
// -------------------

@import '_variable'
@import '_mixins'

.profile-side
  height auto
  border 1px solid var(--border-color)
  z-index 4
  left calc(100% - 216px)
  top 0
  transition(.3s)
  opacity 1
  .input-select
    select
      border-radius 4px
      margin 0 0 0 8px
  .area-remove
    display none
.profile-opened
  #drawerOverlay
    z-index 1
    display block
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    visibility visible
    opacity 0
  .profile-side
    height auto
    display block
    top 48px
  .area-account
    background var(--select-color)
    cursor pointer
    .area-name
      p
        color var(--input-color) !important

  .content-header__col-r
    .icon--color-basic
      fill var(--txt-light-color)

// under 800px
+breakpoint(tb-max)
  .layout-col1
    .content-header
      .content-header__col-r
        .area-account
          .area-name
            p
              display none

  .layout-col2
    .content-header
      .content-header__col-l
        .area-icon
          display block
        .area-app-logo
          margin-left 60px
      .content-header__col-r
        .area-account
          .area-name
            p
              display none

    .title-h2
      .area-icon
        display block
      h2
        @extend .fs-l
    .content-body
      width 100%
      margin-left 0
    .content-side
      overflow-y auto
      position fixed
      top 49px
      left 0
      background var(--ui-bg-color)
      height calc(100vh - 49px)
      height 100vh
      border none
      z-index 4
      width 260px
      left -260px
      top 0
      transition(.3s)
      // transition-property(left)

  .profile-side
    height 100vh !important
    // display none
    border none
    z-index 4
    width 260px
    left 100%
    top 0 !important
    transition(.3s)
    opacity 1
    // transition-property(left)
    .area-remove
      display block

  #drawerOverlay
    visibility hidden
    opacity 0
    transition(.1s)

  .drawer-opened
    #drawerOverlay
      z-index 3
      display block
      position fixed
      top 0
      left 0
      background var(--overlay-light-color)
      width 100%
      height 100%
      visibility visible
      opacity 1

  .drawer-opened
    .content-side
      left 0
      .area-side
        .area-nav
          ul
            li
              a
                width 260px
    .area-close
      display block

  .profile-opened
    #drawerOverlay
      z-index 3
      display block
      position fixed
      top 0
      left 0
      background var(--overlay-light-color)
      width 100%
      height 100%
      visibility visible
      opacity 1

  .profile-opened
    .profile-side
      .area-remove
        display block
      // display block
      left calc(100% - 260px)
      .area-nav
        ul
          li
            a
              width 260px

  .input-txt--size-s
    width 100%
  .input-txt--size-m
    width 100%
  .input-txt--size-l
    max-width 100%