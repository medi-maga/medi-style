// -------------------
// extend class
// use for all files
// -------------------

@import '_variable'
@import '_mixins'

// font -------------------

  .base_font
    font-family 'Noto Sans JP', sans-serif
    font-size 100%

// layout -------------------

  .clearfix
    *
      zoom 1
    &:before
      content " "
      display table
    &:after
      content " "
      display table
      clear both

// font size

  .fs-xxxl
    font-size 3.2rem
  .fs-xxl
    font-size 2.8rem
  .fs-xl
    font-size 2.2rem
  .fs-l
    font-size 1.8rem
  .fs-m
    font-size 1.5rem
  .fs-r
    font-size 1.4rem
  .fs-s
    font-size 1.2rem
  .fs-xs
    font-size 1rem
  .fw-bold
    font-weight 400
  .fw-bold-l
    font-weight bold

// radius
  .r-circle
    border-radius 99px
  .r-round
    border-radius 4px
  .r-round-input
    border-radius 4px
  .r-round-badge
    border-radius 1px

  .txt-link
    color var(--link-color)
    text-decoration underline
    &:hover
      text-decoration none

// ellipsis
  .elp
    text-overflow ellipsis
    overflow hidden
    white-space nowrap
