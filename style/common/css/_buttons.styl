// -------------------
// button style
// only for style.css
// -------------------

@import '_variable'
@import '_mixins'

// common -------------------

  .btn
    text-align center !important
    @extend .r-round
    box-sizing border-box
    position relative
    display inline-block
// colors -------------------

  .btn--c-action
    color var(--txt-light-color)
    background-color var(--link-color)

  .btn--c-cancel
    color var(--link-color)
    background-color var(--txt-light-color)
    border 1px solid var(--link-color)

  .btn--c-success
    color var(--txt-light-color)
    background-color var(--success-color)

  .btn--c-select
    color var(--txt-light-color)
    background-color var(--select-color)

  .btn--c-danger
    color var(--txt-light-color)
    background-color var(--danger-color)

  .btn--c-disabled
    color var(--txt-light-color)
    background-color var(--disabled-light-color)

  .btn--c-fb
    color var(--txt-light-color)
    background var(--social-facebook-color)

  .btn--c-gp
    color var(--txt-light-color)
    background var(--social-google-color)

// size -------------------

  .btn--size-xs
    height 26px
    line-height 26px
    min-width 50px
    @extend .fs-s
    padding 0 10px

  .btn--size-s
    height 32px
    line-height 32px
    min-width 80px
    @extend .fs-s
    padding 0 20px

  .btn--size-m
    height 36px
    line-height 36px
    min-width 120px
    @extend .fs-m
    padding 0 20px

  .btn--size-l
    height 48px
    line-height 48px
    min-width 140px
    @extend .fs-l
    padding 0 40px

