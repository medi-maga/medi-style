//- # section h2 title mixin ---------------------------

  ## example

    +titleH2(pageTitle, 'btn')

mixin titleH2(text, option)
  .title-h2
    h2 #{text}
    case option
      when 'btn'
        .title-h2__btn-group
          block

//- # section h2 with parent title mixin ---------------------------

  ## example

    +titleH2(pageTitle, 'cloud vision', 'btn')

mixin titleH2ChildPage(text, parentTxt, option)
  .title-h2
    h2
      a.parentTxt(href='#') #{parentTxt}
      | #{text}
    case option
      when 'btn'
        .title-h2__btn-group
          block

