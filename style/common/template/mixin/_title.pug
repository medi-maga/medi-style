//- # section h2 title mixin ---------------------------

  ## example

    +titleH2badge('pageTitle', '営業中', 'open', 'white')

mixin titleH2badge(text, badgeTxt, badgeColor, txtColor, option)
  .title-h2.title-h2-badge
    i(class=`badge--color-${badgeColor} badge--text-color-${txtColor} badge`) #{badgeTxt}
    h2 #{text}
    case option
      when 'btn'
        .title-h2__btn-group
          block
