      { 'text': '英語','option': '',}
    ]
    
mixin headerLanguagelist(data)
  p 言語 : 
    .input-select
      select(name='')
        each i in data
          if option == `${i.text}`
            option(value=`${i.text}` selected) #{i.text}
          else
            option(value=`${i.text}`) #{i.text}
